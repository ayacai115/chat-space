= render :partial => "side_bar"
.chat-main
  .chat-main__header
    .chat-main__header--group
      .chat-main__header--group-name
        = @group.name if @group
      %a.chat-main__header--group-edit-btn edit
      .chat-main__header-members-left
        = "MEMBERS: #{ @group.users.map{ |user| user.name }}"
    .chat-main__header-members-right
  .chat-main__body
    .chat-main__body--message
      .chat-main__body--message-name seo
      .chat-main__body--message-time 2016/9/21 06:16:55
      .chat-main__body--message-body Hello world!
  .chat-main__footer
    = form_for [@group, @message] do |f|
      = f.text_field :body, placeholder: 'type messages', class: 'chat-main__footer-form'
      = f.file_field :image, class: 'fa fa-image'
      = f.submit('Send', class: 'submit-btn')
